# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/community_resilience
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=community_resilience

# LLM Configuration
# Options: ollama, openai, groq
LLM_PROVIDER=ollama

# Ollama settings (if LLM_PROVIDER=ollama)
LLM_MODEL=llama3.2
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI settings (if LLM_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Groq settings (if LLM_PROVIDER=groq)
# Get your free API key at https://console.groq.com/
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend
VITE_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# ===========================================
# AUTHENTICATION
# ===========================================

# JWT Configuration
# IMPORTANT: Change this in production! Use a secure random string (min 32 chars)
JWT_SECRET_KEY=CHANGE-ME-IN-PRODUCTION-use-secure-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth - Google (optional)
# Get credentials at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback/google

# OAuth - GitHub (optional)
# Get credentials at https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/auth/callback/github

# API Key prefix (appears at start of generated keys)
API_KEY_PREFIX=cr_

# ===========================================
# CLOUD DEPLOYMENT EXAMPLES
# ===========================================
# Uncomment and configure for cloud deployment

# Neon PostgreSQL (with pgvector)
# DATABASE_URL=postgresql://user:password@ep-cool-name-123456.us-east-2.aws.neon.tech/community_resilience?sslmode=require

# For Render deployment, use Groq for LLM
# LLM_PROVIDER=groq
# GROQ_API_KEY=gsk_your_api_key_here

# For Vercel frontend, set the backend URL
# VITE_API_URL=https://your-app.onrender.com
