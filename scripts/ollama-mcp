#!/usr/bin/env bash
set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
LOG_DIR="$PROJECT_ROOT/.mcp-logs"
mkdir -p "$LOG_DIR"

LOG_FILE="$LOG_DIR/ollama-mcp-$(date +%Y%m%d-%H%M%S).log"

echo "[INFO] Starting Ollama MCP server" | tee -a "$LOG_FILE"

if [ -f "$PROJECT_ROOT/node_modules/.bin/ollama-mcp" ]; then
  exec "$PROJECT_ROOT/node_modules/.bin/ollama-mcp" "$@" 2>&1 | tee -a "$LOG_FILE"
fi

if command -v ollama-mcp >/dev/null 2>&1; then
  exec ollama-mcp "$@" 2>&1 | tee -a "$LOG_FILE"
fi

echo "[ERROR] ollama-mcp not found" | tee -a "$LOG_FILE"
exit 1
